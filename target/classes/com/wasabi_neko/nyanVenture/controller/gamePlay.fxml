                     <image>
                        <Image url="@gamelpay/stop.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
         </children>
      </Pane>
      <Pane fx:id="finishPane" prefHeight="900.0" prefWidth="1440.0" style="-fx-background-color: gray;" visible="false">
         <children>
            <Label fx:id="perfectLabel" layoutX="150.0" layoutY="422.0" text="Perfect : {%d}" textFill="WHITE">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <Label fx:id="greatLabel" layoutX="142.0" layoutY="567.0" text="Great : {%d}" textFill="WHITE">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <Label fx:id="badlLabel" layoutX="154.0" layoutY="688.0" text="Bad : {%d}" textFill="WHITE">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <Label fx:id="missLabel" layoutX="142.0" layoutY="771.0" text="Miss :  {%d}" textFill="WHITE">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <Label fx:id="scoreLabel" layoutX="500.0" layoutY="500.0" text="Score : {%d}" textFill="WHITE">
               <font>
                  <Font size="50.0" />
